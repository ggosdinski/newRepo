<main class="container">
  <h1>Confirm Deletion</h1>
  <%- messages() %>
  
  <form action="/inv/delete/<%- inv_id %>"  method="POST" id="deleteInventoryForm" class="form">
    <div class="form-group">
      <label for="inv_make">Make:</label>
      <input type="text" id="inv_make" name="inv_make" value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>" class="form-control" readonly required>
    </div>
    
    <div class="form-group">
      <label for="inv_model">Model:</label>
      <input type="text" id="inv_model" name="inv_model" value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>" class="form-control" readonly required>
    </div>
    
    <div class="form-group">
      <label for="inv_year">Year:</label>
      <input type="text" id="inv_year" name="inv_year" value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>" pattern="\d{4}" class="form-control" readonly required>
    </div>
    
    <div class="form-group">
      <label for="inv_price">Price:</label>
      <input type="number" id="inv_price" name="inv_price" value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>" class="form-control" readonly required>
    </div>
    
    <button type="submit" class="btn btn-danger">Delete Inventory</button>
    <input type="hidden" name="inv_id" value="<%- inv_id %>">
    <p>Confirm Deletion - The delete is permanent.</p>  
  </form>
</main>
