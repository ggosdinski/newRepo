<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Classification</title>
  <link rel="stylesheet" href="/css/styles.css">
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const form = document.querySelector("#add-classification-form");
      form.addEventListener("submit", function(event) {
        const classificationName = document.querySelector("#classification_name").value;
        const regex = /^[a-zA-Z0-9]+$/;
        if (!regex.test(classificationName)) {
          event.preventDefault();
          alert("Classification name cannot contain spaces or special characters.");
        }
      });
    });
  </script>
</head>
<body>
  <h1>Add New Classification</h1>
  <form id="add-classification-form" action="/inv/add-classification" method="post">
    <div>
      <label for="classification_name">Classification Name:</label>
      <input type="text" id="classification_name" name="classification_name" required>
    </div>
    <button type="submit">Add Classification</button>
  </form>
  <% if (messages.error) { %>
    <div class="flash-message error"><%= messages.error %></div>
  <% } %>
  <% if (messages.success) { %>
    <div class="flash-message success"><%= messages.success %></div>
  <% } %>
</body>
</html>
