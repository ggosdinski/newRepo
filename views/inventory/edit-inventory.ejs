<main class="container">
  <h1>Edit Inventory Item</h1>
  <% if (messages) { %>
    <div class="flash-message"><%- messages %></div>
  <% } %>
  <form action="/inv/update" method="POST" id="updateForm" class="form">
    <div class="form-group">
      <label for="classificationList" class="classificationList">Classification:</label>
      <%- classificationList %>
    </div>
    
    <div class="form-group">
      <label for="inv_make">Make:</label>
      <input type="text" id="inv_make" name="inv_make" value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>" class="form-control" required>
    </div>
    
    <div class="form-group">
      <label for="inv_model">Model:</label>
      <input type="text" id="inv_model" name="inv_model" value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>" class="form-control" required>
    </div>
    
    <div class="form-group">
      <label for="inv_year">Year:</label>
      <input type="text" id="inv_year" name="inv_year" value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>" pattern="\d{4}" class="form-control" required>
    </div>
    
    <div class="form-group">
      <label for="inv_description">Description:</label>
      <textarea id="inv_description" name="inv_description" class="form-control" required><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>
    </div>
    
    <div class="form-group">
      <label for="inv_image">Image Path:</label>
      <input type="text" id="inv_image" name="inv_image" value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>" class="form-control" required>
    </div>
    
    <div class="form-group">
      <label for="inv_thumbnail">Thumbnail Path:</label>
      <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>" class="form-control" required>
    </div>
    
    <div class="form-group">
      <label for="inv_price">Price:</label>
      <input type="number" id="inv_price" name="inv_price" value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>" class="form-control" required>
    </div>
    
    <div class="form-group">
      <label for="inv_miles">Miles:</label>
      <input type="number" id="inv_miles" name="inv_miles" value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>" class="form-control" required>
    </div>
    
    <div class="form-group">
      <label for="inv_color">Color:</label>
      <input type="text" id="inv_color" name="inv_color" value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>" class="form-control" required>
    </div>
    
    <button type="submit" class="btn btn-primary" disabled>Update Inventory</button>
    <input type="hidden" name="inv_id"
      <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
      <% } %>>
  </form>
  <script src="/js/inv-update.js"></script>
  <script src="../../public/js/inventory.js"></script>
</main>
