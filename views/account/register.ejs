<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    .password-requirements {
      margin-top: 5px;
      font-size: 0.8em;
      color: #666;
    }
  </style>
</head>
<body>
  <main class="register-container">
    <h1 class="register-title"><%= title %></h1>
    
    <% if (messages.error) { %>
      <div class="flash-message">
        <p><%- messages.error %></p>
      </div>
    <% } %>

    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>

    <p>All fields are required</p>
    <form action="/account/register" method="post" class="register-form">
      <div class="form-group">
        <label for="account_firstname" class="register-label">First Name:</label>
        <!-- <input type="text" id="account_firstname" name="account_firstname" class="register-input" required> -->
        <input type="text" name="account_firstname" id="accountFirstname" class="register-input" required value="<%= locals.account_firstname %>">
      </div>
      
      <div class="form-group">
        <label for="account_lastname" class="register-label">Last Name:</label>
        <!-- <input type="text" id="account_lastname" name="account_lastname" class="register-input" required> -->
        <input type="text" name="account_lastname" id="account_lastname" class="register-input"  required value="<%= locals.account_lastname %>">

      </div>
      
      <div class="form-group">
        <label for="account_email" class="register-label">Email:</label>
        <!-- <input type="email" id="account_email" name="account_email" class="register-input" required> -->
        <input type="email" name="account_email" id="account_email" class="register-input"  required value="<%= locals.account_email %>">
      </div>
      
      <div class="form-group">
        <label for="account_password" class="register-label">Password:</label>
        <input type="password" id="account_password" name="account_password" class="register-input" required
               pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <div class="password-requirements">
          Password must be at least 12 characters long and contain at least 1 uppercase letter, 1 number, and 1 special character.
        </div>
      </div>
      
      <button type="submit" class="register-button">Register</button>
    </form>
    
    <p class="register-login">Already have an account? <a href="/account/login" class="register-login-link">Login here</a></p>
  </main>
 
</body>
</html>
